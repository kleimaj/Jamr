<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kleimaj.jamr_v2.MySettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient" >

        <TextView
            android:id="@+id/set_text_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="Age"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/set_text_ageVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="160dp"
            android:layout_toRightOf="@id/set_text_age"
            android:text="15 - 35"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/set_seek_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_text_age"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:max="99"
            android:min="15"
            android:progress="35"
            android:minHeight="5dp" />

        <TextView
            android:id="@+id/set_text_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_below="@+id/set_seek_age"
            android:text="Distance (miles)"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/set_seek_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_text_distance"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:max="100"
            android:min="2"
            android:progress="10"
            android:minHeight="5dp" />

        <TextView
            android:id="@+id/set_text_distanceVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="90dp"
            android:layout_below="@+id/set_seek_age"
            android:layout_toRightOf="@id/set_text_distance"
            android:text="10"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/set_text_gender"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/set_seek_distance"
            android:text="Gender"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/set_spinner_gender"
            android:hint="Gender"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:spinnerMode="dropdown"
            android:layout_below="@+id/set_text_gender"
            android:layout_marginLeft="25dp"
            android:background="@drawable/rounded_border_edittext">
        </Spinner>

        <TextView
            android:id="@+id/set_text_identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_spinner_gender"
            android:textColor="#fff"
            android:text="Music Identity"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>

        <MultiAutoCompleteTextView
            android:id="@+id/set_multiComplete_identity"
            android:layout_width="200dp"
            android:hint=" Add..."
            android:layout_height="30dp"
            android:layout_below="@+id/set_text_identity"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border_edittext" />

        <TextView
            android:id="@+id/set_text_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_multiComplete_identity"
            android:textColor="#fff"
            android:text="Genre"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>

        <MultiAutoCompleteTextView
            android:id="@+id/set_multiComplete_genre"
            android:layout_width="200dp"
            android:hint=" Add..."
            android:layout_height="30dp"
            android:layout_below="@+id/set_text_genre"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border_edittext" />

        <Button
            android:id="@+id/set_saveButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/set_multiComplete_genre"
            android:background="@drawable/rounded_border_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textColor="#fff"
            android:text="Save"
            android:onClick="onSaveInfo" />

        <TextView
            android:id="@+id/set_text_logOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/set_saveButton"
            android:textColor="#fff"
            android:text="Log Out"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:onClick="onLogOut"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
