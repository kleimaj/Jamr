<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.kleimaj.jamr_v2.MySettingsActivity">

    <TextView
        android:id="@+id/set_text_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Age"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/set_seek_age"
        app:layout_constraintEnd_toStartOf="@+id/set_text_ageVal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/set_text_ageVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="15 - 35"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/set_seek_age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/set_text_age"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.433" />

    <SeekBar
        android:id="@+id/set_seek_age"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:max="99"
        android:min="15"
        android:minHeight="5dp"
        android:progress="35"
        app:layout_constraintBottom_toTopOf="@+id/set_text_distance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_text_age" />

    <TextView
        android:id="@+id/set_text_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Distance (miles)"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/set_seek_distance"
        app:layout_constraintEnd_toStartOf="@+id/set_text_distanceVal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_seek_age"  />

    <TextView
        android:id="@+id/set_text_distanceVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="10"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/set_seek_distance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/set_text_distance"
        app:layout_constraintTop_toBottomOf="@+id/set_seek_age"
        app:layout_constraintVertical_bias="0.576" />

    <SeekBar
        android:id="@+id/set_seek_distance"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:max="100"
        android:min="2"
        android:minHeight="5dp"
        android:progress="10"
        app:layout_constraintBottom_toBottomOf="@+id/set_text_gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/set_text_distance"
        app:layout_constraintTop_toEndOf="@+id/set_seek_age" />

    <TextView
        android:id="@+id/set_text_gender"
        android:layout_width="200dp"
        android:layout_height="29dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Gender"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTop="@+id/set_spinner_gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_seek_distance" />

    <Spinner
        android:id="@+id/set_spinner_gender"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/set_text_gender"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_border_edittext"
        android:hint="Gender"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTop="@+id/set_text_identity"
        app:layout_constraintBottom_toTopOf="@+id/set_text_identity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_text_gender" />

    <TextView
        android:id="@+id/set_text_identity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Music Identity"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTop="@+id/set_multiComplete_identity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_spinner_gender"/>

    <MultiAutoCompleteTextView
        android:id="@+id/set_multiComplete_identity"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/set_text_identity"
        android:background="@drawable/rounded_border_edittext"
        android:hint=" Add..."
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="328dp" />

    <TextView
        android:id="@+id/set_text_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_multiComplete_identity"
        android:text="Genre"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="380dp" />

    <MultiAutoCompleteTextView
        android:id="@+id/set_multiComplete_genre"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/set_text_genre"
        android:background="@drawable/rounded_border_edittext"
        android:hint=" Add..."
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="407dp" />

    <Button
        android:id="@+id/set_saveButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/set_multiComplete_genre"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_border_button"
        android:onClick="onSaveInfo"
        android:text="Save"
        android:textColor="#fff"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="466dp" />

    <TextView
        android:id="@+id/set_text_logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_saveButton"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="onLogOut"
        android:text="Log Out"
        android:textColor="#fff"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="517dp" />

</android.support.constraint.ConstraintLayout>
