<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kleimaj.jamr_v2.Registration">

    <RelativeLayout
        style="@style/ActionBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/jamrlogo"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView2" />


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:src="@drawable/anon"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="270dp"
            android:background="@drawable/rounded_border_edittext"
            android:hint="name"
            android:paddingLeft="10dp"
            android:id="@+id/NameEditText" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="text"
            android:layout_alignLeft="@+id/NameEditText"
            android:layout_alignStart="@+id/NameEditText"
            android:layout_below="@+id/NameEditText"
            android:layout_marginTop="17dp"
            android:hint="email"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_border_edittext"
            android:id="@+id/emailRegisterEditText" />
        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="text"
            android:layout_alignLeft="@+id/emailRegisterEditText"
            android:layout_alignStart="@+id/emailRegisterEditText"
            android:layout_below="@+id/emailRegisterEditText"
            android:layout_marginTop="17dp"
            android:hint="password"
            android:password="true"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_border_edittext"
            android:id="@+id/passwordRegisterEditText"/>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radioGroup1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="420dp"
            android:layout_marginLeft="90dp"
            android:padding="20dp" >

            <RadioButton
                android:id="@+id/artistRadio"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:textColor="#fff"
                android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                android:gravity="center_horizontal|bottom"
                android:onClick="artistClick"
                android:text="Artist" />

            <RadioButton
                android:id="@+id/bandRadio"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:textColor="#fff"
                android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                android:gravity="center_horizontal|bottom"
                android:onClick="bandClick"
                android:text="Band" />

        </RadioGroup>
        
        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_border_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="510dp"
            android:textColor="#fff"
            android:text="sign up"
            android:onClick="SignUpClick"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
